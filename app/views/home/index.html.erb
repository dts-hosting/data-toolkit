<div class="card bg-base-200 shadow-lg">
  <div class="card-body">
    <h2 class="card-title mb-4">Dashboard</h2>
    <p class="mb-6">Welcome to your activities dashboard.</p>
    <div id="activities">
      <%= turbo_frame_tag :activities_page, @pagy.page, target: :_top do %>
        <% if @activities.empty? %>
          <div class="alert alert-info">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
            <span>No activities found.</span>
          </div>
        <% else %>
          <%= render partial: "activities/activity", collection: @activities, locals: {inline: true} %>
        <% end %>

        <% if @pagy.next %>
          <%= turbo_frame_tag :activities_page, @pagy.next, src: root_path(page: @pagy.next), loading: :lazy, target: :_top do %>
            <%= tag.div "Loading...", class: "text-center p-4" %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>