<div class="container d-flex justify-content-center align-items-center mt-4">
  <div class="card" style="width: 50%;">
    <div class="card-body">
      <h2 class="card-title text-center mb-3">Sign in</h2>
      <%= form_with url: session_path, class: "form" do |form| %>
        <div class="mb-3">
          <%= form.text_field :cspace_url, required: true, autofocus: true, autocomplete: "cspace-url", placeholder: "Enter your CollectionSpace url", value: params[:cspace_url], class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", placeholder: "Enter your CollectionSpace email address", value: params[:email_address], class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Enter your CollectionSpace password", maxlength: 72, class: "form-control" %>
        </div>
        <div class="d-flex justify-content-center">
          <%= form.submit "Sign in", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
