<div class="container d-flex justify-content-center align-items-center mt-5">
  <div class="card shadow-sm" style="min-width: 500px; max-width: 600px;">
    <div class="card-body p-4">
      <h2 class="card-title text-center mb-4 fw-bold">Data Toolkit</h2>

      <%= form_with url: session_path, class: "form" do |form| %>
        <div class="mb-4">
          <label class="form-label">CollectionSpace URL</label>
          <%= form.text_field :cspace_url,
                              required: true,
                              autofocus: true,
                              autocomplete: "cspace-url",
                              placeholder: "Enter your instance URL",
                              value: params[:cspace_url],
                              class: "form-control form-control" %>
          <small class="text-muted mt-1 d-block">Example: https://core.collectionspace.org</small>
        </div>

        <div class="mb-4">
          <label class="form-label">Email Address</label>
          <%= form.email_field :email_address,
                               required: true,
                               autocomplete: "username",
                               placeholder: "Enter your email",
                               value: params[:email_address],
                               class: "form-control form-control" %>
        </div>

        <div class="mb-4">
          <label class="form-label">Password</label>
          <%= form.password_field :password,
                                  required: true,
                                  autocomplete: "current-password",
                                  placeholder: "Enter your password",
                                  maxlength: 72,
                                  class: "form-control form-control" %>
        </div>

        <div class="alert alert-warning text-center mb-4" role="alert">
          <i class="bi bi-info-circle me-2"></i>
          You must not enforce single sign on to login with CollectionSpace.
        </div>

        <div class="d-grid gap-2">
          <%= form.submit "Sign in", class: "btn btn-primary btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
