<div class="container mx-auto flex justify-center items-center mt-8">
  <div class="card bg-base-200 shadow-xl border border-base-400 w-full max-w-md">
    <div class="card-body">
      <h2 class="card-title text-center mb-6 font-bold text-2xl">Data Toolkit</h2>

      <%= form_with url: session_path, class: "form" do |form| %>
        <div class="form-control mb-4">
          <label class="label">
            <span class="label-text">CollectionSpace URL</span>
          </label>
          <%= form.text_field :cspace_url,
                              required: true,
                              autofocus: true,
                              autocomplete: "cspace-url",
                              placeholder: "Enter your instance URL",
                              value: params[:cspace_url],
                              class: "input input-bordered w-full" %>
          <label class="label">
            <span class="label-text-alt text-base-content/60">Example: https://core.collectionspace.org</span>
          </label>
        </div>

        <div class="form-control mb-4">
          <label class="label">
            <span class="label-text">Email Address</span>
          </label>
          <%= form.email_field :email_address,
                               required: true,
                               autocomplete: "username",
                               placeholder: "Enter your email",
                               value: params[:email_address],
                               class: "input input-bordered w-full" %>
        </div>

        <div class="form-control mb-4">
          <label class="label">
            <span class="label-text">Password</span>
          </label>
          <%= form.password_field :password,
                                  required: true,
                                  autocomplete: "current-password",
                                  placeholder: "Enter your password",
                                  maxlength: 72,
                                  class: "input input-bordered w-full" %>
        </div>

        <div class="alert alert-warning mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.96-.833-2.732 0L3.732 19c-.77.833.192 2.5 1.732 2.5z" /></svg>
          <span>You must not enforce single sign on to login with CollectionSpace.</span>
        </div>

        <div class="form-control">
          <%= form.submit "Sign in", class: "btn btn-primary w-full" %>
        </div>
      <% end %>
    </div>
  </div>
</div>