<%= render "shared/card/base", id: dom_id(manifest), card_class: "bg-base-100 shadow-md mb-3" do %>
  <div class="flex justify-between items-center mb-4">
    <h3 class="text-lg font-medium break-all">
      <a href="<%= manifest.url %>" target="_blank" class="link link-info"><%= manifest.name_for_url %></a>
    </h3>
  </div>

  <%= render "shared/card/property_grid", columns: 2 do %>
    <%= render partial: "shared/card/item",
               locals: { property: "Imported", value: local_time(manifest.created_at) } %>
    <%= render partial: "shared/card/item",
               locals: { property: "Data Configs", value: manifest.data_configs_count } %>
  <% end %>
<% end %>
