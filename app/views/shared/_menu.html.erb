<div class="card bg-base-200 shadow-lg">
  <div class="card-body">
    <h2 class="card-title mb-4">Activities</h2>
    <div class="mb-4">
      <h3 class="text-base-content/70 font-semibold border-b border-base-400 pb-2 mb-2">View</h3>
      <ul class="menu menu-compact">
        <li>
          <%= link_to my_activities_path, class: "flex items-center px-2 py-1 rounded #{'bg-base-200 font-medium' if current_page?('#')}" do %>
            <%= icon "user", variant: "solid", class: "size-5" %>My activities
          <% end %>
        </li>
        <li>
          <%= link_to group_activities_path, class: "flex items-center px-2 py-1 rounded #{'bg-base-200 font-medium' if current_page?('#')}" do %>
            <%= icon "list-bullet", class: "size-5" %>Group activities
          <% end %>
        </li>
        <li>
          <%= link_to activity_history_path, class: "flex items-center px-2 py-1 rounded #{'bg-base-200 font-medium' if current_page?('#')}" do %>
            <%= icon "archive-box", class: "size-5" %>Activity history
          <% end %>
        </li>
      </ul>
    </div>

    <div class="mb-4">
      <h3 class="text-base-content/70 font-semibold border-b border-base-400 pb-2 mb-2">Perform</h3>
      <ul class="menu menu-compact">
        <% Activity.display_names.each do |name| %>
          <li>
            <%= link_to new_activity_with_type_path(type: name.parameterize), class: "flex items-center px-2 py-1 rounded" do %>
              <%= icon "plus-circle", class: "size-5" %><%= name %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>

    <% if admin? %>
      <div>
        <h3 class="text-base-content/70 font-semibold border-b border-base-400 pb-2 mb-2">Admin</h3>
        <ul class="menu menu-compact">
          <li>
            <%= link_to "/jobs", class: "flex items-center px-2 py-1 rounded" do %>
              <%= icon "chart-bar", class: "size-5" %>Jobs Dashboard
            <% end %>
          </li>
          <li>
            <%= link_to manifest_registries_path, class: "flex items-center px-2 py-1 rounded" do %>
              <%= icon "document-duplicate", class: "size-5" %>Manifest Registries
            <% end %>
          </li>
        </ul>
      </div>
    <% end %>
  </div>
</div>