<%= render "shared/card/base", card_class: "bg-base-300 shadow-lg mb-4" do %>
  <% actions_content = capture do %>
    <%= link_to manifest_registries_path, class: "btn btn-info btn-sm" do %>
      <%= icon "arrow-uturn-left", class: "size-3" %>
    <% end %>
  <% end %>
  <%= render "shared/card/header",
             title: "Registry Information",
             actions: actions_content %>

  <%= render "shared/card/property_grid" do %>
    <%= render partial: "shared/card/info",
               locals: {
                 property: "Url",
                 value: link_to(manifest_registry.url, manifest_registry.url, target: "_blank", class: "link link-info")
               } %>

    <%= render partial: "shared/card/info",
               locals: {
                 property: "Last Updated",
                 value: manifest_registry.last_updated_at ? local_time(manifest_registry.last_updated_at) : 'Never'
               } %>

    <%= render partial: "shared/card/info",
               locals: {
                 property: "Total Manifests",
                 value: manifest_registry.manifests.count
               } %>
  <% end %>
<% end %>
