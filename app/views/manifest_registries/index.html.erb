<%= render "form", manifest_registry: @manifest_registry %>

<div class="card bg-base-200 shadow-lg">
  <div class="card-body">
    <div class="flex justify-between items-center mb-4">
      <h2 class="card-title">Manifest Registries</h2>
      <div class="flex gap-2">
        <% if @manifest_registries.any? %>
          <%= button_to "Update Registries",
                        run_manifest_registry_path(@manifest_registries.first),
                        method: :post,
                        class: "btn btn-sm btn-success btn-outline" %>
        <% end %>
      </div>
    </div>
    <% if @manifest_registries.any? %>
      <div id="manifest_registries">
        <%= render @manifest_registries %>
      </div>
    <% else %>
      <div class="alert alert-info">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
        <span>No manifest registries have been added yet.</span>
      </div>
    <% end %>
  </div>
</div>
