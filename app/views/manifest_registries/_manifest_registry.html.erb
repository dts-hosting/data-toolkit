<div class="card mb-3">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h6 class="mb-0 text-break">
      <a href="<%= manifest_registry.url %>" target="_blank"><%= manifest_registry.name_for_url %></a>
    </h6>
    <%= link_to "View Details", manifest_registry_path(manifest_registry), class: "btn btn-sm btn-outline-primary" %>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-4">
        <span>Date Added: <%= manifest_registry.created_at || 'Never' %></span>
      </div>
      <div class="col-md-4">
        <span>Last Updated: <%= manifest_registry.last_updated_at || 'Never' %></span>
      </div>
      <div class="col-md-4">
        <span>Manifests: <%= manifest_registry.manifests.count %></span>
      </div>
    </div>
  </div>
</div>