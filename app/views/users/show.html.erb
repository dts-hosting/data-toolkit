<div class="card bg-base-200 shadow-lg">
  <div class="card-body">
    <div class="flex justify-between items-center mb-6">
      <h2 class="card-title">Profile</h2>
      <div>
        <%= link_to root_path, class: "btn btn-info btn-sm" do %>
          <%= icon "arrow-uturn-left", class: "size-3" %>
        <% end %>
      </div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 space-y-4">
      <div class="font-bold">Email Address:</div>
      <div class="sm:col-span-2"><%= @user.email_address %></div>

      <div class="font-bold">CollectionSpace URL:</div>
      <div class="sm:col-span-2">
        <%= link_to @user.cspace_url, @user.cspace_url, target: "_blank", class: "link link-primary" %>
      </div>

      <div class="font-bold">API Version:</div>
      <div class="sm:col-span-2"><%= @user.cspace_api_version %></div>

      <div class="font-bold">Profile:</div>
      <div class="sm:col-span-2"><%= @user.cspace_profile %></div>

      <div class="font-bold">UI Version:</div>
      <div class="sm:col-span-2"><%= @user.cspace_ui_version %></div>

      <div class="font-bold">Data Toolkit Admin?:</div>
      <div class="sm:col-span-2"><%= @user.admin? %></div>
    </div>
  </div>
</div>