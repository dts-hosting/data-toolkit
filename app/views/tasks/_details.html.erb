<div class="mb-3">
  <div class="row mb-2">
    <div class="col-sm-3 fw-bold">Status:</div>
    <div class="col-sm-9">
      <span class="badge badge-<%= task_status_color(task.status) %>">
        <%= task_status_text(task.status) %>
      </span>
    </div>
  </div>

  <div class="row mb-2">
    <div class="col-sm-3 fw-bold">Progress:</div>
    <div class="col-sm-9"><%= task.progress %>%</div>
  </div>

  <div class="row mb-2">
    <div class="col-sm-3 fw-bold">Created:</div>
    <div class="col-sm-9"><%= local_time(task.created_at) %></div>
  </div>

  <div class="row mb-2">
    <div class="col-sm-3 fw-bold">Updated:</div>
    <div class="col-sm-9"><%= local_time(task.updated_at) %></div>
  </div>
</div>
