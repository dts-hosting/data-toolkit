<div class="mb-6">
  <h3 class="text-base-content/70 font-semibold border-b border-base-400 pb-2 mb-4 flex justify-between items-center">
    Batch Config
  </h3>
  <div class="collapse collapse-arrow">
    <input type="checkbox" />
    <div class="collapse-title text-sm font-medium">
      Show/Hide
    </div>
    <div class="collapse-content">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Select field values column -->
        <div>
          <h4 class="font-medium mb-3">Selection Options</h4>

          <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 space-y-3">
            <% BatchConfig.select_attributes.each do |attr_name| %>
              <div class="text-base-content/60"><%= attr_name.to_s.humanize %></div>
              <div class="sm:col-span-2 font-medium"><%= activity.batch_config.send(attr_name) %></div>
            <% end %>
          </div>
        </div>

        <!-- Boolean field values column -->
        <div>
          <h4 class="font-medium mb-3">Toggle Options</h4>

          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 space-y-3">
            <% BatchConfig.boolean_attributes.each do |attr_name| %>
              <div class="text-base-content/60"><%= attr_name.to_s.humanize %></div>
              <div>
                <% if activity.batch_config.send(attr_name) %>
                  <span class="badge badge-success">Enabled</span>
                <% else %>
                  <span class="badge badge-neutral">Disabled</span>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>