<div class="mb-4">
  <h6 class="text-muted fw-semibold border-bottom pb-2 mb-3 d-flex justify-content-between align-items-center">
    Batch Config
    <a class="btn btn-sm btn-outline-secondary"
       data-bs-toggle="collapse"
       data-turbo="false"
       href="#batchConfigCollapse"
       role="button"
       aria-expanded="false"
       aria-controls="batchConfigCollapse">
      Show/Hide
    </a>
  </h6>

  <div class="collapse" id="batchConfigCollapse">
    <div class="row">
      <!-- Select field values column -->
      <div class="col-md-6">
        <h6 class="mb-3">Selection Options</h6>

        <% BatchConfig.select_attributes.each do |attr_name| %>
          <div class="row mb-3">
            <div class="col-sm-4">
              <span class="text-muted"><%= attr_name.to_s.humanize %></span>
            </div>
            <div class="col-sm-8">
              <span class="fw-medium"><%= activity.batch_config.send(attr_name) %></span>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Boolean field values column -->
      <div class="col-md-6">
        <h6 class="mb-3">Toggle Options</h6>

        <% BatchConfig.boolean_attributes.each do |attr_name| %>
          <div class="row mb-3">
            <div class="col-sm-6">
              <span class="text-muted"><%= attr_name.to_s.humanize %></span>
            </div>
            <div class="col-sm-6">
              <% if activity.batch_config.send(attr_name) %>
                <span class="badge bg-success">Enabled</span>
              <% else %>
                <span class="badge bg-secondary">Disabled</span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>