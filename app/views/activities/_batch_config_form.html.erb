<%= form.fields_for :batch_config do |batch_form| %>
  <div class="row">
    <!-- Select fields column -->
    <div class="col-md-6">
      <h6 class="mb-3">Selection Options</h6>

      <% BatchConfig.select_attributes.each do |attr_name| %>
        <div class="row mb-3">
          <div class="col-sm-4">
            <%= batch_form.label attr_name, class: "col-form-label" %>
          </div>
          <div class="col-sm-8">
            <%= batch_form.select attr_name,
                                  options_for_select(BatchConfig.values(attr_name),
                                                     BatchConfig.default_value(attr_name)),
                                  { include_blank: "Select option" },
                                  class: "form-select" %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Boolean fields column -->
    <div class="col-md-6">
      <h6 class="mb-3">Toggle Options</h6>

      <% BatchConfig.boolean_attributes.each do |attr_name| %>
        <div class="row mb-3">
          <div class="col-sm-6">
            <%= batch_form.label attr_name, class: "col-form-label" %>
          </div>
          <div class="col-sm-6">
            <div class="form-check form-switch pt-2">
              <%= batch_form.check_box attr_name, class: "form-check-input", role: "switch" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>